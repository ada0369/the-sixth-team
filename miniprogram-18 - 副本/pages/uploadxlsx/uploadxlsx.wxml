<view class="container">
  <button bindtap="startGrouping" type="default" style="position: relative; left: 0rpx; top: 165rpx">开始分组</button>
  <button bindtap="chooseFile" type="primary" style="position: relative; left: 0rpx; top: -1065rpx">选择文件</button>
  <view wx:if="{{groups.length}}" style="position: relative; left: -199rpx; top: -281rpx;">
    <view wx:for="{{groups}}" wx:for-item="group" wx:key="index">
      <view>分组{{index + 1}}:</view>
      <view wx:for="{{group}}" wx:for-item="name" wx:key="name" >
        {{name}}
      </view>
    </view>
  </view>
</view>
<view><input style="width: 750rpx; height: 70rpx; display: block; box-sizing: border-box; position: relative; left: 0rpx; top: -1110rpx"
      class="input"
      placeholder="请输入组数"
      value="{{groupcount}}"
      bindinput="onGroupCountChange"
      type="number"
    /></view>
  
<view class="watermark">仅支持内容为数字和字母的xlsx文件</view>